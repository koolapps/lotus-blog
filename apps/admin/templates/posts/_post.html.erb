<section class="post" id="post-<%= post.id %>">
  <header class="post-header">
    <h2 class="post-title"><%= post.title %></h2>
  </header>

  <div class="post-content"><%= post.content %></div>
  <div>
    <a href="<%= Admin::Routes.url(:edit_posts, id: post.id) %>">Read more</a>
  </div>
</section>
