<form id="new-post" method="post" action="/admin/posts">
  <p>
    <label for="title">Title</label>
    <input type="text" name="post[title]" value="<%= post.title %>" placeholder="Title" required>
  </p>
  <p>
    <label for="content">Content</label>
    <textarea name="post[content]" placeholder="Content"><%= post.content %></textarea>
  </p>

  <p class="buttons">
    <!-- <a href="<%= Admin::Routes.url(:posts) %>">Back</a> -->
    <button type="submit">Create</button> or <a href="/admin/posts">Back</a>
  </p>
</form>
